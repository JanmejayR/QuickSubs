{
  "build": {
    "frontend": {
      "builder": "nixpacks",
      "nixpacks": {
        "phases": {
          "setup": "cd frontend && npm install",
          "build": "cd frontend && npm run build"
        }
      },
      "output": "frontend/dist"
    },
    "backend": {
      "builder": "nixpacks",
      "nixpacks": {
        "phases": {
          "setup": "cd backend && npm install",
          "start": "cd backend && npm start"
        }
      },
      "output": "backend"
    }
  }
}
